@model MagicVilla_Utilidad.DTO.VillaDTO;
@{
    ViewData["Title"] = "RemoverVilla";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-action="RemoverVilla">

    <div class="container border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input hidden asp-for="Id" />
        <div class="row">
            <h2 class="text-info">Crear nueva villa</h2>
        </div>
        <div class="row mt-2">
            <div class="col-md-6">
                <label class="form-label">Nombre de la villa</label>
                <input asp-for="Nombre" class="form-control" disabled />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-md-6">
                <label class="form-label">Tarifa</label>
                <input asp-for="Tarifa" class="form-control" disabled />
                <span asp-validation-for="Tarifa" class="text-danger"></span>
            </div>

        </div>
        <div class="row mt-2">
            <div class="col-md-6">
                <label class="form-label">Detalle</label>
                <textarea asp-for="Detalle" class="form-control" disabled row="5" col="5"></textarea>
                <span asp-validation-for="Detalle" class="text-danger"></span>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-md-6">
                <label class="form-label">Imagen</label>
                <input asp-for="ImagenURL" class="form-control" disabled />
                <span asp-validation-for="ImagenURL" class="text-danger"></span>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-md-6">
                <label class="form-label">Ocupantes</label>
                <input asp-for="Ocupantes" class="form-control" disabled />
                <span asp-validation-for="Ocupantes" class="text-danger"></span>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-md-6">
                <label class="form-label">Amenidad</label>
                <input asp-for="Amenidad" class="form-control" disabled />
                <span asp-validation-for="Amenidad" class="text-danger"></span>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-md-6">
                <label class="form-label">Metros cuadrados</label>
                <input asp-for="MetrosCuadrados" class="form-control" disabled />
                <span asp-validation-for="MetrosCuadrados" class="text-danger"></span>
            </div>
        </div>
        <div class="d-grid gap-2 d-md-block mt-2">
            <button type="submit" class="btn btn-primary">Eliminar</button>
            <a asp-controller="Villa" asp-action="IndexVilla" class="btn btn-success">Regresar</a>
        </div>

    </div>


</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial"></partial>

}

